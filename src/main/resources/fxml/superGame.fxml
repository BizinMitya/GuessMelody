<?xml version="1.0" encoding="UTF-8"?>

<?language javascript?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Pane?>
<?import java.awt.*?>
<Pane xmlns:fx="http://javafx.com/fxml"
      xmlns="http://javafx.com/javafx"
      fx:controller="controller.SuperGameController" stylesheets="@../css/style.css"
      styleClass="superGameBackground"
      fx:id="pane">

    <fx:define>
        <Toolkit fx:factory="getDefaultToolkit" fx:id="screen"/>
    </fx:define>

    <Label fx:id="timerLabel" text="30.0" styleClass="timeLabel">
        <fx:script>
            timerLabel.setLayoutX(0.2 * screen.getScreenSize().getWidth());
            timerLabel.setLayoutY(0.1 * screen.getScreenSize().getHeight());
             </fx:script>
    </Label>

    <Button text="Начать" onMouseClicked="#click"/>

</Pane>
